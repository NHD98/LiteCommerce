@model LiteCommerce.DomainModels.Category
@{
}
<div class="box box-primary">
    <div class="box-header text-right">
        <a href="~/Category">Back to List</a>
    </div>
    <form role="form" action="~/Category/Input" method="post">
        <div class="box-body">
            <input name="CategoryID" value="@Model.CategoryID" type="hidden" />
            <div class="form-group">
                <label>Category Name:</label>
                <input type="text" class="form-control" placeholder="Enter Category Name" name="CategoryName" value="@Model.CategoryName">
            </div>
            <div class="form-group row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <label>Description:</label>
                    <textarea class="form-control" rows="4" name="Description">@Model.Description</textarea>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Category">
                Cancel
            </a>
        </div>
    </form>
    @Html.ValidationMessage("")
</div>